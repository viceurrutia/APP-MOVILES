<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:padding="24dp" android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent">
<TextView android:text="Game For Gamers" android:textSize="26sp" android:textStyle="bold" android:layout_marginBottom="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
<EditText android:id="@+id/etEmail" android:hint="Correo" android:inputType="textEmailAddress" android:layout_width="match_parent" android:layout_height="wrap_content"/>
<EditText android:id="@+id/etPassword" android:hint="Contraseña" android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
<Button android:id="@+id/btnLogin" android:text="Iniciar sesión" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp"/>
<Button android:id="@+id/btnGoRegister" android:text="Crear cuenta" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/btnForgotPassword"
        android:text="¿Olvidaste tu contraseña?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

</LinearLayout>